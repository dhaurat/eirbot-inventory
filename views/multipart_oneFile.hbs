    <script type="text/javascript">
        function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            var nom_id = (input.value.match(/[^\/\\]+$/gi)[0]).substring(0,(input.value.match(/[^\/\\]+$/gi)[0]).length-4);
            reader.onload = function (e) {
                $('#img_prev').attr('src', e.target.result);
                // $('#'+(input.value.match(/[^\/\\]+$/gi)[0]).substring(0,(input.value.match(/[^\/\\]+$/gi)[0]).length-4))
                //.attr('src', e.target.result);
                // alert('e.target.result : ' + e.target.result);

            };
            reader.readAsDataURL(input.files[0]);
        }
        else {
            var img = input.value;
            $('#img_prev').attr('src',img).height(160);
        }

        $("#x").show().css("margin-right","10px");
    }
</script>
