{{#content "head"}}
    {{> head}}
{{/content}}
{{#content "nav"}}
    {{> nav}}
{{/content}}
{{#content "page"}}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>One Country
            </h1>
            <ol class="breadcrumb">
                <li><a href="/index"><i class="fa fa-home"></i> Home</a></li>
                <li class="active">One Country</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="nav-tabs-custom">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#listcountries" data-toggle="tab">Country Number : {{result._id}}</a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="active tab-pane" id="country">
                                <form class="form-horizontal" role="form" method="GET" accept-charset="utf-8" action="/countries">
                                    <div class="form-group">
                                        <label for="inputName" class="col-sm-2 control-label">Name :</label>
                                        <div class="col-sm-4">
                                            <input class="form-control" placeholder="Name" type="text" name="name" title="Ce champs est requis" value="{{result.name}}" required="required"/>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputName" class="col-sm-2 control-label">Code :</label>
                                        <div class="col-sm-4">
                                            <input class="form-control" placeholder="code" type="text" name="code" title="Ce champs est requis" value="{{result.code}}" required="required"/>
                                        </div>
                                    </div>
                                </form>
                            </div><!-- /.tab-pane -->
                        </div><!-- /.tab-content -->
                    </div><!-- /.nav-tabs-custom -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->

{{/content}}
{{#content "footer"}}
    {{> footer}}
{{/content}}