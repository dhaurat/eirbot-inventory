<form class="form-horizontal" role="form" method="POST" accept-charset="utf-8" action="/addcategories">
  <div class="col-xs-12 col-sm-12">
    <h3>Nouvelle Catégorie</h3>
  </div>
  <div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">Nom de la catégorie</label>
    <div class="col-sm-6">
     <input class="form-control" placeholder="Nom de la catégorie" type="text" name="nom_categorie" title="This field is required" value="{{#if result.one}}{{result.one.nom_categorie}}{{/if}}" required="required"/>
    </div>
  </div>




  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
          {{#if result.one}}
          <input type="hidden" name="_id" value="{{result.one._id}}"/>
          {{/if}}
        <button type="submit" name="button" id="button" class="btn btn-primary">Valider</button>
    </div>
  </div>

</form>
