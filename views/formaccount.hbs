<form class="form-horizontal" role="form" method="POST" accept-charset="utf-8" action="{{#if result.one}}/updateaccount{{else}}/addaccount{{/if}}">
  <div class="col-xs-12 col-sm-12">
    <h3>{{#if result.one}} {{else}}Nouveau compte{{/if}}</h3>
  </div>

  <div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">Login / Mot de passe</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" placeholder="Login" id="login" name="login" required="required" value="{{#if result.one}}{{result.one.login}}{{/if}}">
    </div>
    <div class="col-sm-3">
      <input type="password" class="form-control" placeholder="Mot de passe" id="login" name="password" required="required" value="{{#if result.one}}{{result.one.password}}{{/if}}">
    </div>
    <div class="col-sm-3">
      <input type="password" class="form-control" placeholder="Confirmer le mot de passe" id="password2" name="password2" required="required" value="{{#if result.one}}{{result.one.password}}{{/if}}">
    </div>
  </div>

  <div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">Adresse email</label>
    <div class="col-sm-5">
      <div class="input-group"><span class="input-group-addon"><i class="fa fa-envelope"></i></span>
	<input class="form-control" type="email" placeholder="Adresse email" name="email" value="{{#if result.one}}{{result.one.email}}{{/if}}" title="'Ce champs est requis et doit être de la forme 'example@domain.com'" onchange="form.email2.pattern = this.value;" required="required"/>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">Nom du rôle</label>
    <div class="col-sm-10">
      <select class="form-control" id="role" name="Nom du rôle" required="required">
          {{#compare url 'tab_accounts' operator='indexof'}}
              {{#each result.Role}}
                  <option value="{{this._id}}" {{#compare this._id.id ../result.one.role.id operator='==='}}selected{{/compare}}>{{this.code}} - {{this.libelle}}</option>
              {{/each}}
          {{else}}
              {{#each result}}
                  <option value="{{this._id}}">{{this.code}} - {{this.libelle}}</option>
              {{/each}}
          {{/compare}}
      </select>
    </div>
  </div>

