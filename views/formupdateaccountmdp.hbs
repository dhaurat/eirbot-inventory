    <div class="col-sm-3">
      <input type="password" class="form-control" placeholder="Confirmer le mot de passe" id="password2" name="password2" required="required" value="">
    </div>
</div>

</br>
  <div class="form-group">
    <div class="col-sm-10">
      <input type="hidden" name="_id" value="{{result.one._id}}"/>
      <button type="submit" name="button" id="button" class="btn btn-primary">Valider</button>
    </div>
  </div>

</form>

















			
                           
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
