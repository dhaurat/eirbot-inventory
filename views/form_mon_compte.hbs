<form class="form-horizontal" role="form" method="POST" accept-charset="utf-8" id="formulaire" action="/modifier_mon_email">

  
  <div class="col-xs-12 col-sm-12">
    <h3>Modifier mon email</h3>
  </div>

  
  <div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">Nouvel email</label>
    <div class="col-sm-4">
      <input type="email"  name="email" onchange="form.email2.pattern = this.value;" value="" required="required" autofocus/>
    </div>
  </div>

  <div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">Confirmer nouvel email</label>
    <div class="col-sm-4">
      <input type="email"  name="email2" value="" required="required" autofocus/>
    </div>
  </div>





  <!-- envoi formulaire -->
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
          <input type="hidden" name="_id" value="{{result._id}}"/>
        <button type="submit" name="button" id="button" class="btn btn-primary">Validate</button>
    </div>
  </div>

</form>


