{{#content "head"}}
    {{> head}}
{{/content}}
{{#content "nav"}}
  {{> nav}}
{{/content}}
{{#content "page"}}
      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Bienvenue sur le forum Eirbot. Liste des conversations.
          </h1>
        </section>
        <!-- Main content -->
        <section class="content">
	  {{#each result}}
	  <!--<div class="box box-primary bg-gray">-->
	  <div class="box_conv">
	    <p class="box_conv_title">Sujet : {{titre_conversation}}</p>
	    <div class="box-body">
	      <p>Par {{id_auteur.login}}</p>
	      <p>Date : le <span class="date_conv">{{date_conversation}}</span></p>
	      <div class="row">
		<div class="col-sm-3">
		  <a href="/forum_conv?id_conversation={{_id}}">Voir les commentaires</a>
		</div>
		{{#compare ../user.role.code 'user' operator='!='}}
		<div class="col-sm-3">
		  <a href="/deleteconv?_id={{_id}}" title="Supprimer" class="btn btn-sm btn-default"><i class="fa fa-trash-o"></i></a>
		</div>
		{{/compare}}
		<div class="col-sm-3">
		  <p>
		    {{#if conversation_resolue}}
		    Résolue
		    {{else}}
		    Non résolue
		    {{/if}}
		  </p>
		</div>
		{{#compare ../user.role.code 'user' operator='!='}}
		<div class="col-sm-3">
		  <a href="/resoudre_conv?_id={{_id}}&conversation_resolue=true">Signaler comme résolue</a>
		</div>
		{{/compare}}
	      </div>
	    </div>
	  </div>
	  {{/each}}
	  
        </section><!-- /.content -->
      </div><!-- /.content-wrapper -->
      <script>
	    $(".date_conv").each(function(){
		var date = $(this).text();
		var tab = date.split(' ');
		$(this).text(tab[0]+' '+tab[2]+' '+tab[1]+' '
			     +' '+tab[3]+' à '+tab[4]);
	    });
      </script>
{{/content}}
{{#content "footer"}}
    {{> footer}}
{{/content}}
