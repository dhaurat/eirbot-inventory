{{#content "head"}}
    {{> head}}
{{/content}}
{{#content "nav"}}
  {{> nav}}
{{/content}}
{{#content "page"}}
      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Bienvenue sur le forum Eirbot. Liste des conversations.
          </h1>
        </section>
        <!-- Main content -->
        <section class="content">
	  {{#each result}}
	  <div class="box box-primary bg-gray">
	    <div class="box-body">
	      <h3 class="box-title">{{titre_conversation}}</h3>
	      <p>Par {{id_auteur.prenom}} {{id_auteur.nom}}</p>
	      <p>Date {{date_conversation}}</p>
	    </div>
	  </div>
	  {{/each}}
        </section><!-- /.content -->
      </div><!-- /.content-wrapper -->

{{/content}}
{{#content "footer"}}
    {{> footer}}
{{/content}}
