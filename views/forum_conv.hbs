{{#content "head"}}
    {{> head}}
{{/content}}
{{#content "nav"}}
  {{> nav}}
{{/content}}
{{#content "page"}}
      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
	    Commentaires
          </h1>
        </section>
        <!-- Main content -->
        <section class="content">
	  {{#each result}}
	  <div class="box_conv">
	    <p class="box-title">{{id_auteur.login}} - le <span class="date_com">{{date_commentaire}} </span><span class="box_auter_code">{{id_auteur.role.code}}</span></p>
	    <div class="box-body ">
	      <p class="cont_com">{{contenu_commentaire}}</p>
	    </div>
	  </div>
	  {{/each}}
	  <div class="box box-primary">
	    <div class="box-body">
	      <h3 class="box-title">Nouveau commentaire</h3>
              <form class="form-horizontal" role="form" method="POST" accept-charset="utf-8" action="/addcom">
		<div class="form-group">
		  <label for="contenu_commentaire">
		  </label>
		  <div class="col-sm-6">
		    <textarea class="form-control" name="contenu_commentaire" rows="5" cols="100"></textarea>
		  </div>
		  <input type="hidden" name="id_conversation"  value="{{result.[0].id_conversation}}" />
		</div>
		<button type="submit" name="button" id="button" class="btn btn-primary">Valider</button>
	      </form>
	    </div>
	  </div>
        </section><!-- /.content -->
      </div><!-- /.content-wrapper -->
      <script>
	    $(".date_com").each(function(){
		var date = $(this).text();
		var tab = date.split(' ');
		$(this).text(tab[0]+' '+tab[2]+' '+tab[1]+' '
			     +' '+tab[3]+' Ã  '+tab[4]);
	    });
	    $(".cont_com").each(function(){
		$(this).html($(this).text());
	    });
	    
      </script>

{{/content}}
{{#content "footer"}}
    {{> footer}}
{{/content}}
